<%= form_for(@ads, :url=>{:action => 'update'}) do |f| %>

<%= f.hidden_field :id %>
	<%= f.label "Name: " %>
	<%= f.text_field :name %>
	<%= f.label "Description: " %>
	<%= f.text_field :desc %>
	<%= f.label "Price: " %>
	<%= f.text_field :price %>
	<%= f.label "E-mail: " %>
	<%= f.text_field :email %>
	<%= f.label "Image URL: " %>
	<%= f.text_field :img_url %> 

	<%= f.submit %>
<% end %>
